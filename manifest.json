{
  "manifest_version": 2,
  "name": "Libertas Site Blocker",
  "version": "1.0.0",
  "description": "Block distracting websites to improve focus and productivity",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.svg"
    },
    "default_title": "Libertas Site Blocker"
  },
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "web_accessible_resources": [
    "blocked.html"
  ]
}
